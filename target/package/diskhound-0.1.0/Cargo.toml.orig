[package]
name = "diskhound"
version = "0.1.0"
edition = "2021"
description = "A simple CLI tool to find the largest subdirectories"
license = "MIT"
repository = "https://github.com/hritikvalluvar/diskhound"
readme = "README.md"
keywords = ["disk", "usage", "cli", "directory", "size"]
categories = ["command-line-utilities"]
exclude = ["target/"]

[dependencies]
walkdir = "2"
clap = { version = "4", features = ["derive"] }
humansize = "2"
anyhow = "1"
